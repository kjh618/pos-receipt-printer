<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.POSReceiptPrinter" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarSize">55dp</item>
    </style>

    <style name="ThemeOverlay.POSReceiptPrinter.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.POSReceiptPrinter.Title" parent="TextAppearance.AppCompat.Title">
    </style>
    <style name="TextAppearance.POSReceiptPrinter.Body" parent="TextAppearance.AppCompat.Body1">
    </style>
    <style name="TextAppearance.POSReceiptPrinter.Button" parent="TextAppearance.AppCompat.Button">
    </style>
</resources>